<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/idEditarDireccionLimite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/idNuevaDireccionLimite"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            app:backgroundTint="@android:color/holo_blue_light"
            app:srcCompat="@drawable/ic_edit_white" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/idNuevaDireccionLimite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            app:backgroundTint="@android:color/holo_blue_light"
            app:srcCompat="@drawable/ic_button_add_white" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/idBorrarDireccionLimite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/idEditarDireccionLimite"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            app:backgroundTint="@android:color/holo_red_light"
            app:srcCompat="@drawable/ic_trash_white" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/idCerrarPopUpDireccionesListado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            app:backgroundTint="@android:color/holo_orange_light"
            app:srcCompat="@drawable/ic_delete_white" />

        <ListView
            android:id="@+id/idListadoDireccionesLimites"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>