<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/idPictureProductoListado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_below="@+id/idPictureProductoListado"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="-150dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idNombreProductoEnGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/idPictureProductoListado"
                android:layout_marginBottom="122dp"
                android:layout_weight="1"
                android:text="nombre producto" />

            <TextView
                android:id="@+id/idPrecioProductoListado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/idPictureProductoListado"
                android:layout_alignTop="@+id/idNombreProductoEnGrid"
                android:layout_weight="1"
                android:text="precio"
                android:textAlignment="textEnd" />

        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>